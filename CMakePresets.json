{
  "version": 9,
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "linux",
      "inherits": "common",
      "cacheVariables": {
        "CMAKE_STRIP": "llvm-strip --strip-all --strip-sections",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_C_EXTENSIONS": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "",
        "CMAKE_C_FLAGS": "",
        "CMAKE_C_FLAGS_DEBUG": "-Og",
        "CMAKE_C_FLAGS_RELEASE": "-Os -DNDEBUG",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ]
}
